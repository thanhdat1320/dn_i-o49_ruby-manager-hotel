<div class="col-3">
  <div class="card h-100">
    <span class="position-absolute top-0 start-100 translate-middle p-2 bg-<%= status_color(room) %> border border-light rounded-circle">
      <span class="visually-hidden"><%= room.status %></span>
    </span>
    <%= room_image room %>
    <div class="card-body">
      <h5 class="card-title"><%= room.name %></h5>
      <%= render room.room_attributes %>
      <span class="position-absolute top-0 end-0 translate-middle badge rounded-pill bg-<%= level_color(room) %>">
        <%= room.level %>
        <span class="visually-hidden"><%= room.level %></span>
      </span>
      <div class="d-flex justify-content-between align-items-center">
        <h6 class="mt-3"><%= number_to_currency(room.price, :locale => locale) %> $</h6>
        <%= link_to t(:more), room, class: "stretched-link" %>
      </div>
    </div>
  </div>
</div>
